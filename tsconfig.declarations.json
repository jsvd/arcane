{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist-types",

    "target": "es2022",
    "lib": ["es2022"],

    "types": ["node"]
  },
  "include": [
    "runtime/*/index.ts",
    "runtime/testing/harness.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
